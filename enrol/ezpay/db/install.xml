<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="enrol/ezpay/db" VERSION="20250227" COMMENT="XMLDB file for Moodle enrol/ezpay"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="enrol_ezpay" COMMENT="Holds all known information about EzPay enrollment instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="instance_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Reference to enrol table"/>
        <FIELD NAME="transaction_id" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="EzPay transaction ID"/>
        <FIELD NAME="payment_status" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Payment status"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The time the record was created"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="instance_id" TYPE="foreign" FIELDS="instance_id" REFTABLE="enrol" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
