{{!
    @template paygw_ezpay/redirect_form
    
    Template for the redirect payment form.
    
    Classes required for JS:
    * none
    
    Data attributes required for JS:
    * none
    
    Context variables required for this template:
    * redirecturl - The URL to redirect to for payment
    
    Example context (json):
    {
        "redirecturl": "https://example.com/payment"
    }
}}
<div class="paygw_ezpay-redirect-form">
    <p>{{#str}} redirectingtoezpay, paygw_ezpay {{/str}}</p>
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="mt-3">
        <a href="{{{redirecturl}}}" class="btn btn-primary" id="ezpay-redirect-button">
            {{#str}} proceedtopayment, paygw_ezpay {{/str}}
        </a>
    </div>
</div>

<script>
    // Automatically redirect to payment page after a short delay
    setTimeout(function() {
        document.getElementById('ezpay-redirect-button').click();
    }, 1500);
</script>
